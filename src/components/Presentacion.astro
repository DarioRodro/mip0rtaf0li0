---
import { Image } from "astro:assets";
import YosinFondo from "/public/img/yopo/YOPsinF1.png";
import html from "/public/img/Logos/HTML.png";
import css from "/public/img/Logos/CSS.png";
import js from "/public/img/Logos/JS.png";
import python from "/public/img/Logos/PYTHON.png";
import sql from "/public/img/Logos/MYSQL.png";
---

<div class="presentation">
  <div class="mi-texto">
    <h2>Front-end Developer</h2>
    <h1>Dario Rodriguez</h1>
    <p>
      Desarrollador Web Jr. con una pasión por el aprendizaje y la mejora
      constante. Siempre en evolución, perfeccionando mis habilidades día a día
      para crear experiencias digitales innovadoras y de alto impacto.
    </p>
    <div class="but">
      <a
        href="/mip0rtaf0li0/docs/CV_DarioRodriguezQuispe.pdf"
        download="CV-DarioRodriguez.pdf"
      >
        <button id="descargar-cv">Descargar CV</button>
      </a>
      <a
        href="https://www.linkedin.com/in/dario-rodriguez-quispe-a230131a6"
        target="_blank"
      >
        <i class="fa-brands fa-linkedin-in"></i>
      </a>

      <a href="mailto:dariorodq30@gmail.com" target="_blank">
        <i class="fa-solid fa-envelope"></i>
      </a>
      <a href="https://github.com/DarioRodro" target="_blank">
        <i class="fa-brands fa-github"></i>
      </a>
    </div>
  </div>
  <div class="yo-prest" id="yo-prest">
    <div class="mii-imagen">
      <Image src={YosinFondo} alt="yo" class="imagenmia" />
    </div>
    <Image src={html} class="icono" alt="HTML" />
    <Image src={css} class="icono" alt="CSS" />
    <Image src={js} class="icono" alt="JavaScript" />
    <Image src={python} class="icono" alt="Python" />
    <Image src={sql} class="icono" alt="MySQL" />
  </div>
  <style>
    .presentation {
      display: flex;
      flex-direction: row; /* Lado a lado en pantallas grandes */
      align-items: center;
      justify-content: center;
      padding: 20px;
      gap: 20px;
      padding-top: 110px;
      background: rgb(21, 23, 29);
      margin: 0 180px;
    }

    .mi-texto {
      width: 100%;
      max-width: 800px;
      color: #ffff;
      -webkit-animation: scale-up-bl 0.4s cubic-bezier(0.39, 0.575, 0.565, 1)
        both;
      animation: scale-up-bl 0.4s cubic-bezier(0.39, 0.575, 0.565, 1) both;
    }

    @-webkit-keyframes scale-up-bl {
      0% {
        -webkit-transform: scale(0.5);
        transform: scale(0.5);
        -webkit-transform-origin: 0% 100%;
        transform-origin: 0% 100%;
      }
      100% {
        -webkit-transform: scale(1);
        transform: scale(1);
        -webkit-transform-origin: 0% 100%;
        transform-origin: 0% 100%;
      }
    }
    @keyframes scale-up-bl {
      0% {
        -webkit-transform: scale(0.5);
        transform: scale(0.5);
        -webkit-transform-origin: 0% 100%;
        transform-origin: 0% 100%;
      }
      100% {
        -webkit-transform: scale(1);
        transform: scale(1);
        -webkit-transform-origin: 0% 100%;
        transform-origin: 0% 100%;
      }
    }

    .mi-texto h2 {
      font-size: 20px;
      color: #b4b5bdc4;
    }
    .mi-texto h1 {
      font-size: 55px;
      font-weight: normal;
      margin: 0;
    }

    .but {
      padding: 10px;
      justify-content: center;
    }

    .but button {
      font-family: "Montserrat", sans-serif;
      padding: 9px 25px;
      color: white;
      background-color: #15171d;
      border: 1px solid white;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.3s ease 0s;
    }

    .but button:hover {
      background-color: rgba(248, 243, 243, 0.904);
      color: black;
      border: 1px solid black;
    }

    .but i {
      transform: scale(2);
      margin-right: 15px; /* Espacio entre los iconos */
      margin-left: 10px;
      color: #fff;
    }
    .but i:hover {
      transform: scale(2.5);
      transition: transform 0.3s ease-in-out;
    }
    .yo-prest {
      width: 100%;
      display: flex;
      justify-content: center; /* Centrar la imagen */
      position: relative;
    }

    .mii-imagen {
      position: relative;
    }

    .imagenmia {
      width: 600px;
      height: 600px;
      border-radius: 20%;
      object-fit: cover;
    }

    .icono {
      position: absolute;
      width: 60px;
      height: 60px;
      border-radius: 20%;
      opacity: 0;
      transition:
        transform 1s ease-out,
        opacity 0.5s;
      will-change: transform, opacity; /* Preparar cambios */
      animation: aparecer 0.7s cubic-bezier(0.25, 1, 0.5, 1) forwards;
    }

    @keyframes aparecer {
      from {
        opacity: 0;
        top: 50%;
        left: 50%;
        transform: translate(50%, 50%);
      }
      to {
        opacity: 1;
      }
    }
    /* Animación al cargar */
    .activo {
      opacity: 1;
    }

    /* Posiciones de los íconos */
    .icono:nth-child(2) {
      /* HTML */
      transform: translate(-200px, 140px);
    }

    .icono:nth-child(3) {
      /* CSS */
      transform: translate(170px, 150px);
    }

    .icono:nth-child(4) {
      /* JavaScript */
      transform: translate(-200px, 310px);
    }

    .icono:nth-child(5) {
      /* Python */
      transform: translate(180px, 320px);
    }

    .icono:nth-child(6) {
      /* MySQL */
      transform: translate(-90px, 410px);
    }

    /* Animación final */
    .activo:nth-child(2) {
      animation-delay: 0s;
      transform: translate(10%, 10px);
      opacity: 1;
    } /*HTML*/
    .activo:nth-child(3) {
      animation-delay: 0.15s;
      transform: translate(90px, -230%);
      opacity: 1;
    } /*CSS*/
    .activo:nth-child(4) {
      animation-delay: 0.3s;
      transform: translate(-190px, -10%);
      opacity: 1;
    } /*JS*/
    .activo:nth-child(5) {
      animation-delay: 0.45s;
      transform: translate(80px, 70px);
      opacity: 1;
    } /*PYTHON*/
    .activo:nth-child(6) {
      animation-delay: 0.6s;
      transform: translate(-80px, 90px);
      opacity: 1;
    } /*MYSQL*/

    .cuerpote {
      margin-left: 0px;
      margin-right: 0px;
    }
    .linea {
      position: relative;
      height: 1px;
      background-color: #000000; /* Color azul */
      width: 20%; /* Ancho de la línea (ajústalo según lo que necesites) */
      margin: 20px auto;
      border: 1;
      border-color: #0f53c2;
      border-radius: 40%;
    }
    a {
      text-decoration: none;
    }

    @media (max-width: 404px) {
      .but {
        padding: 0px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        text-align: center;
      }
      .but a {
        align-items: center;
        display: flex;
        flex-wrap: wrap;
      }
    }
    @media (min-width: 769px) and (max-width: 1440px) {
      .linea {
        height: 2px;
        width: 50%; /* Ancho de la línea (ajústalo según lo que necesites) */
      }
      .presentation {
        flex-direction: row; /* Cambia a disposición en fila en pantallas grandes */
        align-items: center;
        padding: 20px 1%;
        padding-top: 100px;
        margin: 0 0px;
      }

      .mi-texto {
        text-align: left; /* Texto alineado a la izquierda en pantallas grandes */
      }
      .yo-prest {
        width: 100%;
        display: flex;
        justify-content: center; /* Centrar la imagen */
        position: relative;
        padding-top: 40px;
      }
      .mi-texto {
        text-align: left; /* Justificación completa en pantallas pequeñas */
      }
      .mi-texto h2 {
        font-size: 15px;
        color: #b4b5bdc4;
      }
      .mi-texto h1 {
        font-size: 35px;
        font-weight: normal;
        margin: 0;
      }
      .but {
        padding: 0px;
        display: flex;
        justify-content: center;
        text-align: center;
      }
      .but button {
        padding: 9px 25px;
        justify-content: center;
        align-items: center;
      }
      .but a {
        align-items: center;
        display: flex;
      }
      .but i {
        transform: scale(1.5);
        margin-right: 15px; /* Espacio entre los iconos */
        margin-left: 10px;
        color: #fff;
      }
      .but i:hover {
        transform: scale(2);
        transition: transform 0.3s ease-in-out;
      }

      .mii-imagen {
        position: relative;
      }

      .imagenmia {
        width: 400px;
        height: 400px;
        border-radius: 20%;
        object-fit: cover;
      }
      .icono {
        width: 40px; /* Reducir el tamaño de los iconos */
        height: 40px;
      }

      /* Posiciones iniciales */
      .icono:nth-child(2) {
        transform: translate(-100px, 110px);
      }

      .icono:nth-child(3) {
        transform: translate(100px, 105px);
      }

      .icono:nth-child(4) {
        transform: translate(-100px, 195px);
      }

      .icono:nth-child(5) {
        transform: translate(100px, 200px);
      }

      .icono:nth-child(6) {
        transform: translate(30px, 270px);
      }
    }

    @media (max-width: 768px) {
      .linea {
        width: 50%; /* Ancho de la línea (ajústalo según lo que necesites) */
      }
      .presentation {
        flex-direction: column; /* Imagen debajo del texto */
        align-items: center;
        padding: 20px 3%;
        padding-top: 60px;
        gap: 20px;
        margin: 0; /* Eliminar márgenes laterales */
      }

      .mi-texto {
        text-align: center; /* Justificación completa en pantallas pequeñas */
      }
      .mi-texto h2 {
        font-size: 15px;
        color: #b4b5bdc4;
      }
      .mi-texto h1 {
        font-size: 35px;
        font-weight: normal;
        margin: 0;
      }
      .but {
        padding: 15px;
      }

      .but i {
        transform: scale(1.5);
        margin-right: 15px; /* Espacio entre los iconos */
        margin-left: 10px;
        color: #fff;
      }
      .but i:hover {
        transform: scale(2);
        transition: transform 0.3s ease-in-out;
      }

      .yo-prest {
        width: 100%;
        display: flex;
        justify-content: center;
      }

      .imagenmia {
        width: 90%; /* Achicar la imagen en pantallas pequeñas */
        max-width: 250px;
        height: auto;
      }

      .icono {
        width: 40px; /* Reducir el tamaño de los iconos */
        height: 40px;
      }

      @media (max-width: 768px) {
        .imagenmia {
          width: 250px;
          height: 250px;
        }

        .icono {
          width: 40px;
          height: 40px;
        }

        .icono:nth-child(2) {
          transform: translate(-100px, 10px);
        }

        .icono:nth-child(3) {
          transform: translate(100px, -5px);
        }

        .icono:nth-child(4) {
          transform: translate(-100px, 95px);
        }

        .icono:nth-child(5) {
          transform: translate(100px, 100px);
        }

        .icono:nth-child(6) {
          transform: translate(30px, 170px);
        }
      }
    }
  </style>
</div>
